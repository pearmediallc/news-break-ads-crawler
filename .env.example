# Environment Configuration for News Break Ads Crawler v1.3

# Server Configuration
PORT=3000
NODE_ENV=development

# Production Settings (for Render deployment)
# PORT=10000
# NODE_ENV=production
# ENABLE_FILE_LOGGING=false

# Puppeteer Configuration
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=

# For Linux/Docker deployment:
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# Extraction Settings
DEFAULT_EXTRACTION_DURATION=5
MAX_EXTRACTION_DURATION=1440
DEFAULT_TARGET_URL=https://www.newsbreak.com/new-york-ny

# Database Configuration
DATABASE_PATH=./data/ads_crawler.db
ENABLE_DATABASE_SYNC=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=./logs/app.log

# Security
CORS_ORIGIN=*
TRUST_PROXY=true